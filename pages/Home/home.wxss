.swiper {
  height: 200px;
  width: 100%;
  text-align: center;
}

.swiper image {
  height: 200px;
  width: 100%;
}

/*右侧栏list的item*/

.nav_right_items {
  /*浮动向左*/
  float: left;
  /*每个item设置宽度是33.33%*/
  justify-content: space-between;
  width: 25%;
  text-align: center;
}

.nav_right_items image {
  /*被图片设置宽高*/
  width: 60px;
  height: 60px;
}

.nav_right_items text {
  /*给text设成块级元素*/
  display: block;
  font-size: 15px;
  /*设置文字溢出部分为...*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.button {
  width: 100%;
  height: 180px;
  border: 1px solid #c3c3c3;
  /* flex-wrap：wrap ; */
  display: flex;
  justify-content: space-around;
  padding: 10px 0px 0px 0px;
  background: #e8e6e9;
  flex-wrap: wrap;
}

.status_column {
  display: flex;
  width: 100%;
  height: 50px;
  flex-direction: column;
  text-align: center;
  background: white;
  flex-wrap: wrap;
}

.status_column_text {
  width: 100%;
  height: 15px;
  
}

.backView{
  width: 100%;
  height: 180px;
}



.warp {
    height: 100%;
    position: relative;
}

.warp image {
    width: 100%;
    height: 100%;
}

.name {
    width: 200px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    color: black;
    position: absolute;
    top: 46%;
    margin-top: -10px;
    margin-left: -400px;
    border-radius: 50%;
   
}

.price {
    width: 200px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    color: black;
    position: absolute;
    top: 46%;
    margin-top: 10px;
    margin-left: -380px;
    border-radius: 50%;
   
}

.nav_right{  
  /*右侧盒子使用了绝对定位*/  

  top: 0;  
  right: 0;  
  
  width: 100%;  
  height: 100%;  
  padding: 10px;  
  box-sizing: border-box;  
  background: grey;  
} 


