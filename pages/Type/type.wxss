
.header{
  border-top: 1px solid #E3E3E3;
  background: white;
}

.tab{
  padding: 20rpx 0;
  width: 25%;
  text-align: center;
  border-bottom: 2px solid #dedede;   
}

.nav_right{  
  /*右侧盒子使用了绝对定位*/  
  display: flex;
  justify-content: space-around;
  flex-wrap:wrap;
  /*宽度75%，高度占满，并使用百分比布局*/  
  width: 100%;  
  height: 100%;  
  background: #E3E3E3;  
} 
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  width: 48%;  
  height: 240px;  
  text-align: center;  
}  
.sm-text{
  text-align: center;  
   font-size: 28rpx;
   padding-left: 10px;
   color: grey;
  width: 150rpx;
  height: 20px;
  line-height:20px;
}

.content{
  padding-left: 10px;
  background: white;
  height: 20px;
  line-height: 20px;
  background: white;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.nav_right .nav_right_items image{  
  /*被图片设置宽高*/  
  width: 100%;  
  height: 180px;  
}  
.temview{
  width: 100%;  
  height: 180px;  
}
